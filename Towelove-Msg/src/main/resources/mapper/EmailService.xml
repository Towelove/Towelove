    <!--使用SQL语句标签-->
    <select id="selectAfterTenMinJob" resultType="blossom.project.towelove.msg.entity.MsgTask">
        SELECT id,
               user_id,
               account_id,
               template_id,
               receive_account,
               nickname,
               title,
               content,
               send_time,
               params,
               json_map
        FROM msg_task
        WHERE deleted = 0
          AND status = 0
          AND msg_type = 0
          AND send_time BETWEEN ADDTIME(CURRENT_TIME, '00:00:00') AND ADDTIME(CURRENT_TIME, '00:05:00')
          AND mod(id, 1) = 0;

    </select>
